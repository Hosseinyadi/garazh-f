# Runtime
NODE_ENV=production
PORT=8080

# Security
# MUST set a strong secret in production, otherwise the server will refuse to start
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET

# CORS / Frontend origins (comma-separated list)
# Example: https://example.com,https://www.example.com
ALLOWED_ORIGINS=https://example.com
# Optional legacy single origin
FRONTEND_URL=https://example.com

# Request body limits
BODY_LIMIT=10mb

# Rate limits
RATE_LIMIT_MAX=100
OTP_RATE_LIMIT_MAX=3
LOGIN_RATE_LIMIT_MAX=50

# OTP mock (keep FALSE in production)
OTP_MOCK=false

# Database
# Optional: override SQLite file path (default: server/database/bilflow.db)
DB_PATH=/var/app/data/bilflow.db

# SMS provider configuration
# Select provider: payamak (default) or smsir
SMS_PROVIDER=payamak

# Payamak-panel
SMS_API_TOKEN=
SMS_BASE_URL=https://api.payamak-panel.com/api/SendSMS/SendSMS
SMS_USERNAME=
SMS_PASSWORD=
SMS_FROM=

# sms.ir
SMS_IR_API_KEY=
SMS_IR_VERIFY_URL=https://api.sms.ir/v1/send/verify
SMS_IR_TEMPLATE_ID=123456
# Use sandbox only in staging/testing
SMS_SANDBOX=false
